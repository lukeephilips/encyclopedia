<form action="/words/<%= @word.id() %>/definition/new" method="post">
  <div class="form-group">
    <label for="definition">Definition:</label>
    <input type="text" name="definition" class="form-control">
  </div>
  <div class="form-group">
    <label for="latin">Latin name:</label>
    <input type="text" name="latin" class="form-control">
  </div>
  <div class="form-group">
    <label for="image">Image URL:</label>
    <input type="text" name="image" class="form-control">
  </div>
  <button type="submit">Add a description</button>
</form>
